        <ScrollViewer HorizontalAlignment="Left" MaxHeight="500" Height="auto" Margin="40,170,0,0" VerticalAlignment="Top" Width="944">
            <ListView ItemsSource="{Binding ReservationList}" Name="BoatList" FontSize="16">
                <ListView.View>
                    <GridView>
                        <!--<GridViewColumn DisplayMemberBinding="{Binding boatId}" Header="Bootnummer" Width="auto"/>-->
                        <GridViewColumn Header="Foto">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <!--<Label Content="{Binding boatPhotoBlob}"/>-->
                                    <Image Width="100" Height="100" Source="{Binding boatBitmap}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding boatName}" Header="Boot naam" Width="auto"/>
                        <GridViewColumn DisplayMemberBinding="{Binding boatTypeName}" Header="Boot type" Width="auto"/>
                        <GridViewColumn Header="Acties">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Bekijken" Click="ViewBoat_Click" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </ScrollViewer>

        <Button x:Name="MenuFilterButton" Content="Filter" Width="75" Height="20" Margin="712,131,0,0" Click="MenuFilterButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top"></Button>
        <Popup x:Name="FilterPopup" Width="200" Height="150" IsOpen="False" PlacementTarget="{Binding ElementName=MenuFilterButton}" Placement="Left" VerticalAlignment="Top">
            <Canvas Background="White">
                <Button x:Name="SelectionFilteren" Content="Filteren" Width="54" Canvas.Left="31" Canvas.Top="121" Click="SelectionFilteren_Click"/>
                <Button x:Name="ResetSelection" Content="Reset" Width="50" Canvas.Left="121" Canvas.Top="121" Click="ResetSelection_Click"/>
                <Label Content="Boot naam" Canvas.Left="100" Canvas.Top="10" Width="88" HorizontalContentAlignment="Center"></Label>
                <ComboBox x:Name="Bootnamen" Canvas.Left="30" Canvas.Top="13" Width="54" SelectionChanged="Bootnamen_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding boatTypeName}"></TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Label Content="Aantal plekken" Canvas.Left="101" Canvas.Top="40" Width="89" HorizontalContentAlignment="Center"></Label>
                <ComboBox x:Name="Bootplekken" Canvas.Left="31" Canvas.Top="43" Width="54" SelectionChanged="Bootplekken_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding boatAmountSpaces}"></TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Label Content="Stuur" Canvas.Left="101" Canvas.Top="71" Width="89" HorizontalContentAlignment="Center"></Label>
                <CheckBox x:Name="StuurCheck" Canvas.Left="48" Canvas.Top="82"></CheckBox>
            </Canvas>
        </Popup>

    </Grid>
