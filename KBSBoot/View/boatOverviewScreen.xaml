<UserControl x:Class="KBSBoot.View.boatOverviewScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KBSBoot.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid MinHeight="200" Height="289" MinWidth="600" Width="682" HorizontalAlignment="Left" Margin="55,74,0,0"  IsReadOnly="True"
          Name="boatList" VerticalAlignment="Top" RowHeight="30" ColumnWidth="*"
                  ColumnHeaderHeight="50" HeadersVisibility="Column"
                  Background="LightGray" RowBackground="White" 
                  AlternatingRowBackground="LightGray"
                  BorderBrush="LightGray" BorderThickness="1" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Boot ID" Binding="{Binding boatId}"></DataGridTextColumn>
                <DataGridTextColumn Header="Boot Naam" Binding="{Binding boatTypeName}"></DataGridTextColumn>
                <DataGridTextColumn Header="Omschrijving" Binding="{Binding boatTypeDescription}"></DataGridTextColumn>
                <DataGridTextColumn Header="Stuur" Binding="{Binding boatSteerString}"></DataGridTextColumn>
                <DataGridTextColumn Header="Aantal plekken" Binding="{Binding boatAmountSpaces}"></DataGridTextColumn>
                <DataGridTextColumn Header="Buiten gebruik?" Binding="{Binding boatOutOfServiceString}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="BackToHomePage" Content="Terug" HorizontalAlignment="Left" Margin="55,26,0,0" VerticalAlignment="Top" Width="75" Click="BackToHomePage_Click" Height="20"/>
        <Button x:Name="MenuFilterButton" Content="Filter" Width="75" Height="20" Margin="646,26,0,0" Click="MenuFilterButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top"></Button>
        <Popup x:Name="FilterPopup" Width="200" Height="150" IsOpen="False" PlacementTarget="{Binding ElementName=MenuFilterButton}" Placement="Left" VerticalAlignment="Top">
            <Canvas Background="White">
                <Button x:Name="SelectionFilteren" Content="Filteren" Width="54" Canvas.Left="31" Canvas.Top="121" Click="SelectionFilteren_Click"/>
                <Button x:Name="ResetSelection" Content="Reset" Width="50" Canvas.Left="121" Canvas.Top="121" Click="ResetSelection_Click"/>
                <Label Content="Boot naam" Canvas.Left="100" Canvas.Top="10" Width="88" HorizontalContentAlignment="Center"></Label>
                <ComboBox x:Name="Bootnamen" Canvas.Left="30" Canvas.Top="13" Width="54" SelectionChanged="Bootnamen_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding boatTypeName}"></TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Label Content="Aantal plekken" Canvas.Left="101" Canvas.Top="40" Width="89" HorizontalContentAlignment="Center"></Label>
                <ComboBox x:Name="Bootplekken" Canvas.Left="31" Canvas.Top="43" Width="54" SelectionChanged="Bootplekken_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding boatAmountSpaces}"></TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Label Content="Stuur" Canvas.Left="101" Canvas.Top="71" Width="89" HorizontalContentAlignment="Center"></Label>
                <CheckBox x:Name="StuurCheck" Canvas.Left="48" Canvas.Top="82"></CheckBox>
            </Canvas>
        </Popup>
    </Grid>
</UserControl>
