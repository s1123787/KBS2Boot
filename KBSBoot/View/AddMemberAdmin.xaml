<UserControl x:Class="KBSBoot.View.AddMemberAdmin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KBSBoot.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Label Content="Naam" HorizontalAlignment="Left" Margin="10,10,10,10" VerticalAlignment="Top"/>
        <TextBox x:Name="NameBox" HorizontalAlignment="Left" Height="23" Margin="111,13,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="145"/>
        <Label Content="Gebruikersnaam" HorizontalAlignment="Left" Margin="10,41,10,10" VerticalAlignment="Top"/>
        <TextBox x:Name="UserNameBox" HorizontalAlignment="Left" Height="23" Margin="111,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145"/>
        <Label Content="Niveau" HorizontalAlignment="Left" Margin="10,72,10,10" VerticalAlignment="Top"/>
        <ComboBox x:Name="RowLevelBox" HorizontalAlignment="Left" Margin="111,76,0,0" VerticalAlignment="Top" Width="145">
            <ComboBoxItem IsSelected="True">Beginner</ComboBoxItem>
            <ComboBoxItem>Amateur</ComboBoxItem>
            <ComboBoxItem>Gevorderd</ComboBoxItem>
            <ComboBoxItem>Professional</ComboBoxItem>
        </ComboBox>
        <Label Content="Rol" HorizontalAlignment="Left" Margin="10,103,10,10" VerticalAlignment="Top"/>
        <ComboBox x:Name="AccesslevelBox" HorizontalAlignment="Left" Margin="111,107,0,0" VerticalAlignment="Top" Width="145">
            <ComboBoxItem IsSelected="True">Gast</ComboBoxItem>
            <ComboBoxItem>Lid</ComboBoxItem>
            <ComboBoxItem>Materiaalcommissaris</ComboBoxItem>
            <ComboBoxItem>Wedstrijdcommissaris</ComboBoxItem>
        </ComboBox>
        <Label Content="Lid tot" HorizontalAlignment="Left" Margin="10,134,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="DayBox" HorizontalAlignment="Left" Height="24" Margin="111,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="20"/>
        <Label Content="-" HorizontalAlignment="Left" Margin="131,134,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="MonthBox" HorizontalAlignment="Left" Height="24" Margin="146,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="20"/>
        <Label Content="-" HorizontalAlignment="Left" Margin="166,134,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="YearBox" HorizontalAlignment="Left" Height="24" Margin="181,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="33"/>
        <Button x:Name="AddUser" Content="Voeg toe" HorizontalAlignment="Left" Margin="10,165,0,0" VerticalAlignment="Top" Width="75" Click="AddUser_Click"/>
    </Grid>
</UserControl>
