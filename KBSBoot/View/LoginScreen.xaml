<UserControl x:Class="KBSBoot.View.LoginScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KBSBoot.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" >
    <Grid >
        <Border Background="#262938" CornerRadius="10" Margin="25" >
            <StackPanel Margin="20">
                <Label Content="Login" Foreground="White" FontSize="24" HorizontalAlignment="Center"/>
                <Separator></Separator>
                <Label  Content="Gebruikersnaam" Foreground="White" Margin="305,0,298,0" Height="29"/>
                <TextBox Name="usernametxt" Background="#a2aee8"/>
                <Button x:Name="LoginBtn" Height="20" Width="90" Margin="0 10 0 0" Content="Inloggen" Click="LoginBtn_click"  />
                <Label Content="Nog geen account?" Foreground="White" Margin="298,0" HorizontalAlignment="Center"/>
                <Button x:Name="RegisterBtn" Height="20" Width="90" Content="Registreren" Click="RegisterBtn_click"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
