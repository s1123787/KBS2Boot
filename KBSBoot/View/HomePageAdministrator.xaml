<UserControl x:Name="AdminUserControl" x:Class="KBSBoot.View.HomePageAdministrator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KBSBoot.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="ViewDidLoaded" Width="525" Height="350" Foreground="White">
    <Grid x:Name="AdminGrid">
        <Label x:Name="FullNameLabel" Content="Welkom &lt;naam&gt;" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="35" Width="220" FontSize="20"/>
        <Button x:Name="LogoutButton" Content="Uitloggen" HorizontalAlignment="Left" Margin="378,10,0,0" VerticalAlignment="Top" Width="124" Height="35" FontSize="20" Click="LogoutButton_Click"/>
        <Button x:Name="Users" Margin="10,70,329,162" Click="Users_Click">
            <StackPanel Orientation="Vertical">
                <Image Source="../Resources/users.png" Stretch="Uniform" Height="61" Width="93"/>
                <TextBlock Text="Beheren gebruikers" FontSize="20" Height="32"/>
            </StackPanel>
        </Button>
        <Label x:Name="AccessLevelLabel" Content="Adminstator" HorizontalAlignment="Left" Margin="230,18,0,0" VerticalAlignment="Top" Width="118"/>
    </Grid>
</UserControl>
